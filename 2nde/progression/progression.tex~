\newcommand{\objectifcc}[1]{
%\\ \textcolor{red}{\textbf{Objectif pour le contrôle commun : }#1}
}

\newcommand{\calculmental}[1]{
%\\ \textcolor{blue}{\textbf{Activités mentales : }#1}
}

