\begin{exercice}[Cours] Connaître les formules du cours.\baremeexo{3}
\begin{enumerate}
 \item Dans un repère, exprimer les coordonnées $x_M$ et $y_M$ du milieu $M$ du segment $[AB]$
en fonction des coordonnées de $A$ et de $B$. 
 \item Dans un repère orthonormé, exprimer la distance $AB$ en fonction des coordonnées de $A$ et de $B$.
Quel est le théorème qui permet de démontrer cette formule ?
\end{enumerate}
\end{exercice}


\begin{exercice}[Calcul]\baremeexo{4}
\begin{enumerate}
  \item Calculer 15\% de 400.
  \item Calculer $3x^2-4x+1$ pour $x=-2$.
 \item Développer  et réduire $(5x-1)(2x+1)$.
 \item Recopier et compléter pour rendre l'égalité vraie pour tout réel $x$ : \[9x^2-16=(3x+\dots)(3x-\dots).\]
\end{enumerate}
\end{exercice}

\begin{exercice}[105 p. 261]
 Le plan\baremeexo{8} est muni d'un repère orthonormé $(O,I,J)$.
Soit $A(-2;2)$, $B(-7;-3)$, $C(0;-2)$ et $D(5;3)$.
\begin{enumerate}
 \item Faire\baremeque{1} un figure.
 \item Démontrer que $ABCD$ est un paralélogramme\baremeque{3}.
 \item Montrer que $CBD$ est isocèle en $C$\baremeque{3}.
 \item Qu'en déduit-on sur la nature du quadrilatère $ABCD$\baremeque{1} ?
\end{enumerate}
\end{exercice}

\begin{exercice}
 Le plan\baremeexo{5} est muni d'un repère orthonormé $(O,I,J)$.
\begin{enumerate}
 \item Sur\baremeque{1} une première figure :
  \begin{enumerate}
    \item Hachurer en bleu l'ensemble $E$ des points $M(x,y)$
tels que $x\geq1$.
    \item Hachurer en rouge l'ensemble $F$ des points $M(x,y)$
tels que $y\geq1$.
   \end{enumerate}
  \item Sur\baremeque{1} une deuxième figure :
\begin{enumerate}
 \item Hachurer en vert l'ensemble $G$ des points $M(x,y)$
tels que $x\geq1$ et $y\geq1$.
  \item $H$ est l'ensemble des points $M(x,y)$ de $G$ tels que
$x$ et $y$ sont des nombres entiers. Marquer en noir les points de $H$.
\end{enumerate}
  \item Vrai ou faux\baremeque{3} (justifier la réponse) : Si un cercle de centre $O$ a pour 
rayon un nombre entier, alors il ne passe par aucun point de $H$. 
\end{enumerate}

\end{exercice}




